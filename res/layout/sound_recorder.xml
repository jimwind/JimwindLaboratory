<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sound_record_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="点击录制语音"
            android:textColor="#a6a6a6" />

        <TextView
            android:id="@+id/sound_record_center_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/sound_record_start_img"
            android:gravity="center" />

        <View
            android:id="@+id/sound_record_line"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ff63a309" />

        <LinearLayout
            android:id="@+id/sound_record_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sound_record_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:padding="15dp"
                android:text="取消"
                android:textColor="#ff63a309" />

            <View
                android:id="@+id/sound_record_line1"
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="#ff63a309"
                android:visibility="visible" />

            <TextView
                android:id="@+id/sound_record_reset_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:padding="15dp"
                android:text="重录"
                android:textColor="#ff63a309"
                android:visibility="visible" />

            <View
                android:id="@+id/sound_record_line2"
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="#ff63a309"
                android:visibility="visible" />

            <TextView
                android:id="@+id/sound_record_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:padding="15dp"
                android:text="保存"
                android:textColor="#ff63a309"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>